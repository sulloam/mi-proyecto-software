<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :rol, "Rol" %><br />
    <%= f.select :rol, options_for_select([["Profesor", "profesor"], ["Estudiante", "estudiante"]]), prompt: "Selecciona tu rol" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "Número de Teléfono" %><br />
    <%= f.text_field :phone_number, placeholder: "+56912345678" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse", class: "btn btn-primary" %>
  </div>

  <div class="field">
  <%= f.label :first_name, "Nombre" %>
  <%= f.text_field :first_name, placeholder: "Tu nombre" %>
</div>

<div class="field">
  <%= f.label :last_name, "Apellido" %>
  <%= f.text_field :last_name, placeholder: "Tu apellido" %>
</div>

<% end %>


<%= render "devise/shared/links" %>
