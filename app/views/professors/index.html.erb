<h1 class="text-center">Listado de Profesores</h1>

<div class="container">
  <% if @professors.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Email</th>
          <th>Descripci√≥n</th>
          <th>Foto</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @professors.each do |professor| %>
          <tr>
            <td><%= professor.full_name %></td>
            <td><%= professor.email %></td>
            <td><%= professor.description %></td>
            <td>
              <% if professor.photo.attached? %>
                <%= image_tag professor.photo, class: "professor-photo", size: "100x100" %>
              <% else %>
                <span>No tiene foto</span>
              <% end %>
            </td>
            <td>
              <%= link_to "Ver Perfil", professor_path(professor), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No hay profesores registrados en este momento.</p>
  <% end %>
</div>

<%= link_to 'Volver al inicio', root_path, class: 'btn btn-secondary' %>
