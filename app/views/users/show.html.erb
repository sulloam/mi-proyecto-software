<h1 class="text-center">Perfil de <%= @user.first_name %> <%= @user.last_name %></h1>

<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <% if @user.photo.attached? %>
        <div class="text-center mb-3">
          <%= image_tag @user.photo, class: "img-thumbnail", alt: "Foto de perfil", style: "width: 150px; height: 150px;" %>
        </div>
      <% end %>
      <p><strong>Nombre:</strong> <%= @user.first_name %> <%= @user.last_name %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Rol:</strong> <%= @user.rol.capitalize %></p>
      <p><strong>Teléfono:</strong> <%= @user.phone_number %></p>
      <p><strong>Descripción:</strong> <%= @user.description %></p>

      <%= link_to 'Editar Perfil', edit_user_registration_path, class: 'btn btn-primary' %>
      <%= link_to 'Volver a Inicio', root_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
